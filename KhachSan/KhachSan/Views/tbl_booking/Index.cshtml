@model IEnumerable<KhachSan.Models.DB.tbl_booking>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
    <div style="padding-top:3px">
    @Html.ActionLink("Tạo Mới", "Create",null,new {@class="btn btn-outline-secondary" })
    </div>
</p>
<table class="table">
    <tr>
        <th>
            Tên Khách Hàng
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.customer_address)
        </th>*@
        <th>
            Email Khách Hàng
        </th>
        <th>
            SĐT Khách Hàng
        </th>
        <th>
            Ngày Đến
        </th>
        <th>
            Ngày Đi
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.no_of_members)
        </th>*@
        @*<th>
            @Html.DisplayNameFor(model => model.total_amount)
        </th>*@
        <th>
            Tên Phòng
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.tbl_payment_type.payment_type)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.customer_name)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.customer_address)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.customer_email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.customer_phone_no)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.booking_from)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.booking_to)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.no_of_members)
        </td>*@
        @*<td>
            @Html.DisplayFor(modelItem => item.total_amount)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.tbl_room.room_number)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.tbl_payment_type.payment_type)
        </td>*@
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.booking_id }, new { @class = "btn btn-outline-success" }) 
            @Html.ActionLink("Chi Tiết", "Details", new { id=item.booking_id },new { @class = "btn btn-outline-warning" }) 
            @Html.ActionLink("Xóa", "Delete", new { id=item.booking_id }, new { @class = "btn btn-outline-danger" })
        </td>
    </tr>
}

</table>
