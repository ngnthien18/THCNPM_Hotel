@model IEnumerable<KhachSan.Models.DB.tbl_user>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
    <div style="padding-top:3px">

        @Html.ActionLink("Tạo Mới", "Create", null, new { @class = "btn btn-outline-secondary" })
    </div>
</p>
<table class="table">
    <tr>
        <th>
            Tên
        </th>
        <th>
            Email
        </th>
        <th>
            Mật Khẩu
        </th>
        <th>
            Chức Vụ
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user_password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbl_user_level.user_type)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.userid },new { @class = "btn btn-outline-success" }) 
            @Html.ActionLink("Chi Tiết", "Details", new { id=item.userid }, new { @class = "btn btn-outline-warning" })
            @Html.ActionLink("Xóa", "Delete", new { id=item.userid }, new { @class = "btn btn-outline-danger" })
        </td>
    </tr>
}

</table>
