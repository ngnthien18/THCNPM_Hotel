    <link rel="stylesheet" href="~/Content/ViewContent/css/slicknav.css">
    <link rel="stylesheet" href="~/Content/ViewContent/css/style.css">

</head>

<body>


    <header>
        <div class="header-area ">
            <div id="sticky-header" class="main-header-area">
                <div class="container-fluid p-0">
                    <div class="row align-items-center no-gutters">
                        <div class="col-xl-5 col-lg-6">
                            <div class="main-menu  d-none d-lg-block">
                                <nav>
                                    <ul id="navigation">
                                        <li><a href="@Url.Action("Home","View")">Trang Chủ</a></li>
                                        <li><a class="active" href="@Url.Action("Room","View")">Phòng</a></li>
                                        <li><a href="@Url.Action("About","View")">Giới Thiệu</a></li>

                                        <li><a href="@Url.Action("Contact","View")">Liên Hệ</a></li>

                                    </ul>
                                </nav>
                            </div>
                        </div>
                        <div class="col-xl-2 col-lg-2">
                            <div class="logo-img">
                                <a href="@Url.Action("Home","View")">
                                    <img src="~/Content/ViewContent/img/logo.png" alt="">
                                </a>
                            </div>
                        </div>
                        <div class="col-xl-5 col-lg-4 d-none d-lg-block">
                            <div class="book_room">
                                <div class="socail_links">
                                    <ul>
                                        <li>
                                            <a href="#">
                                                <i class="fa fa-facebook-square"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="fa fa-twitter"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="fa fa-instagram"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="book_btn d-none d-lg-block">

                                    <a href="@Url.Action("Login","Home")">Quản Lý</a>
                                </div>
                                <div class="book_btn d-none d-lg-block">

                                    <a class="popup-with-form" href="#test-form">Đặt Phòng</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="mobile_menu d-block d-lg-none"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="bradcam_area breadcam_bg_1">
        <h3>Phòng Sang Trọng</h3>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="section_title text-center mb-100">
                    <h3 style="margin-top:30px">Chi Tiết Phòng</h3>
                </div>
            </div>
        </div>
    </div>
    <div style="margin-top:-30px" class="container">
        <div class="row">
            <div class="col-xl-6 col-lg-6">
                <div class="about_thumb2 d-flex">
                    <img width="500" , height="312" src="~/Content/ViewContent/img/rooms/@Model.room_image" alt="">
                </div>
            </div>
            <div class="col-xl-6 col-lg-6">
                <div class="about_info">
                    <div class="section_title mb-16px">
                        <h3>
                            Tên Phòng: @Model.room_number<br>
                            Loại Phòng: @Model.tbl_room_type.room_name<br>
                            Giá: @string.Format("{0:#,##0}", Model.tbl_room_type.room_price).Replace(',', '.') VNĐ/Đêm
                        </h3>
                    </div>
                    <p>
                        Mô Tả: @Model.room_description
                    </p>

                </div>
            </div>
        </div>
    </div>
    <footer style="margin-top:100px;" class="footer">
        <div class="footer_top">
            <div class="container">
                <div class="row">
                    <div class="col-xl-3 col-md-6 col-lg-3">
                        <div class="footer_widget">
                            <h3 class="footer_title">
                                Địa Chỉ
                            </h3>
                            <p class="footer_text">
                                HUFLIT: 828 Sư Vạn Hạnh,<br>
                                Phường 13, Quận 10, TP.Hồ Chí Minh.
                            </p>

                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6 col-lg-3">
                        <div class="footer_widget">
                            <h3 class="footer_title">
                                Liên Hệ
                            </h3>
                            <p class="footer_text">
                                0935176455<br>
                                team6@gmail.com
                            </p>
                        </div>
                    </div>
                    <div class="col-xl-2 col-md-6 col-lg-2">
                        <div class="footer_widget">
                            <h3 class="footer_title">
                                Liên Kết
                            </h3>
                            <ul>
                                <li><a href="@Url.Action("Home","View")">Trang Chủ</a></li>
                                <li><a href="@Url.Action("Room","View")">Phòng</a></li>
                                <li><a href="@Url.Action("About","View")">Giới Thiệu</a></li>
                                <li><a href="@Url.Action("Contact","View")">Liên Hệ</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-xl-4 col-md-6 col-lg-4">
                        <div class="footer_widget">
                            <h3 class="footer_title">
                                Bản Tin
                            </h3>
                            <form action="#" class="newsletter_form">
                                <input type="text" placeholder="Nhập nội dung">
                                <button type="submit">Đăng Ký</button>
                            </form>
                            <p class="newsletter_text">Theo dõi bản tin để biết thông tin.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="copy-right_text">
            <div class="container">
                <div class="footer_border"></div>
                <div class="row">
                    <div class="col-xl-8 col-md-7 col-lg-9">
                        <p class="copy_right">
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script> All rights reserved
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    </div>
                    <div class="col-xl-4 col-md-5 col-lg-3">
                        <div class="socail_links">
                            <ul>
                                <li>
                                    <a href="https://www.facebook.com">
                                        <i class="fa fa-facebook-square"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="https://www.twitter.com">
                                        <i class="fa fa-twitter"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="https://www.instagram.com">
                                        <i class="fa fa-instagram"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    
    <script src="~/Content/ViewContent/js/vendor/modernizr-3.5.0.min.js"></script>
    <script src="~/Content/ViewContent/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/Content/ViewContent/js/popper.min.js"></script>
    <script src="~/Content/ViewContent/js/bootstrap.min.js"></script>
    <script src="~/Content/ViewContent/js/owl.carousel.min.js"></script>
    <script src="~/Content/ViewContent/js/isotope.pkgd.min.js"></script>
    <script src="~/Content/ViewContent/js/ajax-form.js"></script>
    <script src="~/Content/ViewContent/js/waypoints.min.js"></script>
    <script src="~/Content/ViewContent/js/jquery.counterup.min.js"></script>
    <script src="~/Content/ViewContent/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/Content/ViewContent/js/scrollIt.js"></script>
    <script src="~/Content/ViewContent/js/jquery.scrollUp.min.js"></script>
    <script src="~/Content/ViewContent/js/wow.min.js"></script>
    <script src="~/Content/ViewContent/js/nice-select.min.js"></script>
    <script src="~/Content/ViewContent/js/jquery.slicknav.min.js"></script>
    <script src="~/Content/ViewContent/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/ViewContent/js/plugins.js"></script>
    <script src="~/Content/ViewContent/js/gijgo.min.js"></script>

    <!--contact js-->
    <script src="~/Content/ViewContent/js/contact.js"></script>
    <script src="~/Content/ViewContent/js/jquery.ajaxchimp.min.js"></script>
    <script src="~/Content/ViewContent/js/jquery.form.js"></script>
    <script src="~/Content/ViewContent/js/jquery.validate.min.js"></script>
    <script src="~/Content/ViewContent/js/mail-script.js"></script>

    <script src="~/Content/ViewContent/js/main.js"></script>
    <script>
        $('#datepicker').datepicker({
            iconsLibrary: 'fontawesome',
            icons: {
                rightIcon: '<span class="fa fa-caret-down"></span>'
            }
        });
        $('#datepicker2').datepicker({
            iconsLibrary: 'fontawesome',
            icons: {
                rightIcon: '<span class="fa fa-caret-down"></span>'
            }

        });</script>



</body>

</html>
